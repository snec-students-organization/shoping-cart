
    <section class="py-5">
        <div class="container">
            <!-- Section Title -->
            <div class="row text-center">
                <div class="col-lg-12">
                    <h2 class="section-title">Our Products</h2>
                    <p class="lead">Discover our high-quality products</p>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="row mt-4">
                
                <!-- Product 1 -->
                <h2>Products</h2>

{{#each products}}
  <div style="border: 1px solid #ddd; margin-bottom: 15px; padding: 10px; max-width: 300px;">
    <h3>{{this.name}}</h3>
    <img src="/product-images/{{this.image}}" alt="{{this.name}}" style="max-width: 100%;" />
    <p>Price: ${{this.price}}</p>
    <p>{{this.description}}</p>
  </div>
{{/each}}



    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>