<h2>Your Cart</h2>
{{#if cartItems.length}}
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each cartItems}}
        <tr>
          <td>{{this.product.name}}</td>
          <td>₹ {{this.product.price}}</td>
          <td>{{this.quantity}}</td>
          <td><a href="/cart/remove/{{this.product._id}}" class="btn btn-danger btn-sm">Remove</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <h4>Total: ₹ {{total}}</h4>
  <a href="/checkout" class="btn btn-success">Checkout</a>
{{else}}
  <p>Your cart is empty!</p>
{{/if}}
