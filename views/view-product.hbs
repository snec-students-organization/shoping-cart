{{!-- views/view-product.hbs --}}
{{!-- Extends main layout --}}

<div class="container my-5">
  <h2 class="mb-4 text-center">Available Products</h2>

  <div class="row">
    {{#each products}}
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="/product-images/{{this.image}}" class="card-img-top" alt="{{this.name}}">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="fw-bold">â‚¹ {{this.price}}</p>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary btn-sm">Add to Cart</a>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

